<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="elitecorp.titstat.com.titstat_hackathon.ProfileActivity">


        <ImageView
            android:id="@+id/img_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/avatar_favorite" />

        <elitecorp.titstat.com.titstat_hackathon.Util.CircularImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />

        <elitecorp.titstat.com.titstat_hackathon.Util.TextAwesome
            android:id="@+id/tv_ethinity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_thumbnail"
            android:layout_centerHorizontal="true"
            android:maxLines="3"

            android:padding="10dp"
            android:text="American"
            android:textColor="@color/primary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ethinity"
            android:layout_centerHorizontal="true"
            android:maxLines="3"
            android:paddingTop="10dp"
            android:text="Status"
            android:textColor="#222"
            android:textSize="15dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/statuse_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status"
            android:editable="false"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <elitecorp.titstat.com.titstat_hackathon.Util.TextAwesome
            android:layout_marginTop="15dp"
            android:id="@+id/tv_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statuse_msg"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:drawablePadding="10dp"
            android:text="@string/fa_thumbs_up"
            android:textSize="20sp" />


        <elitecorp.titstat.com.titstat_hackathon.Util.TextAwesome
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dob"
            android:layout_margin="15dp"
            android:textColor="@color/primary"
            android:gravity="center"
            android:textSize="20dp"
            android:drawablePadding="10dp" />


        <elitecorp.titstat.com.titstat_hackathon.Util.TextAwesome
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_height"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="20dp"
            android:drawablePadding="10dp" />


        <elitecorp.titstat.com.titstat_hackathon.Util.TextAwesome
            android:id="@+id/tv_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_weight"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="20dp"
            android:drawablePadding="10dp" />


        <elitecorp.titstat.com.titstat_hackathon.Util.TextAwesome
            android:id="@+id/tv_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_veg"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="20dp"
            android:drawablePadding="10dp" />


    </RelativeLayout>
</ScrollView>